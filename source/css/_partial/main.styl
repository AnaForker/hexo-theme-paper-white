#container{
	position:relative;
	min-height:100%;
	#mobile-nav{
		display: none;
		.overlay{
			height: 110px;
			position: absolute;
			width: 100%;
			/*background: #4d4d4d;*/
			background-image: url(overlay-pic);
			background-size: cover;
			background-position: top;
			&.fixed{
		        position: fixed;
		        height: 42px;
		        z-index: 99;
		    }
		}
		#header{
			padding: 10px 0 0 0;
			.profilepic{
				display: block;
				position: relative;
				z-index: 100;
				border: 5px solid #fff;
    			-webkit-border-radius: 100%;
    			border-radius: 100%;
    			width: 128px;
    			height: 128px;
    			margin: 0 auto;
    			position: relative;
    			overflow: hidden;
    			-webkit-transition: all 0.2s ease-in;
    			display: -webkit-box;
    			-webkit-box-orient: horizontal;
    			-webkit-box-pack: center;
    			-webkit-box-align: center;
    			text-align: center;
				img{
					width: 100%;
    				height: 100%;
    				opacity: 1;
				}
			}
			.header-menu{
				height: auto;
				margin: 10px;
				ul{
					text-align: center;
					cursor: default;
				}
				li{
					display: inline-block;
					margin: 3px;
				}
			}
			.social{
				display: none;
			}
		}
	}
	.right-col {
		/*background: #fff;*/
		width: 21%;
		right: 2%;
		position: fixed;
		opacity: 1;
		transition:all .2s ease-in;
		height:100%;
		.intrude-less {
			width: 100%;
			text-align: center;
			margin: 24px 0 0;
			height: 100%;
		}
	}
	.mid-col {
		position:absolute;
		left:0;
		min-height:100%;
		/*background:#eaeaea;*/		
		/*background: rgba(255,255,255,0.6);*/
		background-size: cover;
		right: 23%;
		width: auto;
	}

