#header{
	width: 100%;
	height: 100%;
	a {
		color: #404040;
		&:hover {
			color: #4184f3;
		}
	}
	.profileCard{
		box-shadow: 0 1px 4px 0 rgba(0,0,0,0.14);
    	background: #fefefe;
    	border-radius: 2px;
    	height: 38%;
    	min-height: 266px;
    	overflow: hidden;
    	padding-top: 26.3%;
    	position: relative;
    	.overlay{
			width: 100%;
			height: 0;
			background-image: url(overlay-pic);
			background-size: cover;
			background-position:top center;
			position: absolute;
			border-radius: 2px 2px 0 0;
			margin-top: -26.3%;
			opacity: 1;
			padding-bottom: 52.6%;
		}
		.profilepic{
			text-align: center;
			display: block;
			border: 5px solid #fff;
			border-radius: 100%;
			width: 42.67%;
			/*height: 128px;*/
			margin: 0 auto;
			position: relative;
			overflow: hidden;
			background: #88acdb;
			-webkit-transition: all 0.2s ease-in;
			display: -webkit-box;
			-webkit-box-orient: horizontal;
			-webkit-box-pack: center;
			-webkit-box-align: center;
			img{
				width: 20%;
				height: 20%;
				border-radius: 100%;
				display:block;
				opacity: 0;
				-webkit-transition: all 0.2s ease-in;
				&.show{
					width: 100%;
					height: 100%;
					opacity: 1;
				}
			}
		}
		hgroup{
			margin: -moz-calc((45% - 40px - 37px - 25px)/2) 0;
			margin: -webkit-calc((45% - 40px - 37px - 25px)/2) 0;
			margin: calc((45% - 40px - 37px - 25px)/2) 0;
		}
		.social{
    		/*margin-top: 1.67em;*/
			height: 40px;
    		line-height: 40px;
    		background: #f1f1f1;
    		font-size: 0px;
    		position: absolute;
    		bottom: 0;
    		width: 100%;
    		a {
    			position: relative;
    			padding: 0 3%;
    			width: 18px;
    			font-size: 18px;
    			display: inline-block;
    			&:before{
    				content: "";
    				transition: height .25s ease-in-out;
    				display: block;
    				position: absolute;
    				height: 0px;
    				width: 100%;
    				left: 0;
    				bottom: 0;
    				background: #005a87;
    			}
    			&:hover{
    				&:before{
    					height: 5px;
    				}
    			}
    		}
    		a.bangumi{
    			background: url('https://bgm.tv/img/favicon.ico') center no-repeat;
    			&:before{
    				background: #FE8A95;
    			}
    		}
    		a.weibo{
    			color: #E6162D;
    			&:before{
    				background: #E6162D;
    			}
    		}
    		a.twitter{
    			color: #1DA1F2;
    			&:before{
    				background: #1DA1F2;
    			}
    		}
    		a.rss {
				color: #ef7522;
				&:before{
    				background: #ef7522;
    			}
			}
			a.github {
				color: #afb6ca;
				&:before{
    				background: #afb6ca;
    			}
			}
			a.facebook {
				color: #3b5998;
				&:before{
    				background: #3b5998;
    			}
			}
			a.google {
				color: #c83d20;
				&:before{
    				background: #c83d20;
    			}
			}
			a.linkedin {
				color: #005a87;
				&:before{
    				background: #005a87;
    			}
			}
			a.zhihu {
				background:url('/img/zhihu.png') center no-repeat;
				&:before{
